<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="SecureTraffic.SlowVehicleView">
	<Grid>
	  <Grid.ColumnDefinitions>
	    <ColumnDefinition Width="*" />
	    <ColumnDefinition Width="*" />
	  </Grid.ColumnDefinitions>
		<Label Text="Position: " HorizontalTextAlignment="End" Grid.Row="0" Grid.Column="0" />
		<Label Text="{Binding Position}" Grid.Row="0" Grid.Column="1" />
		
		<Label Text="Time: " HorizontalTextAlignment="End" Grid.Row="1" Grid.Column="0" />
		<Label Text="{Binding Time}" Grid.Row="1" Grid.Column="1" />
		
		<Label Text="Heading: " HorizontalTextAlignment="End" Grid.Row="2" Grid.Column="0" />
		<Label Text="{Binding Heading}" Grid.Row="2" Grid.Column="1" />
		
		<Label Text="Speed: " HorizontalTextAlignment="End" Grid.Row="3" Grid.Column="0" />
		<Label Text="{Binding Speed}" Grid.Row="3" Grid.Column="1" />
		
		<Label Text="Accuracy: " HorizontalTextAlignment="End" Grid.Row="4" Grid.Column="0" />
		<Label Text="{Binding Accuracy}" Grid.Row="4" Grid.Column="1" />
		
		<Label Text="Altitude: " HorizontalTextAlignment="End" Grid.Row="5" Grid.Column="0" />
		<Label Text="{Binding Altitude}" Grid.Row="5" Grid.Column="1" />
		
		<Label Text="Altitude Accuracy: " HorizontalTextAlignment="End" Grid.Row="6" Grid.Column="0" />
		<Label Text="{Binding Altitude}" Grid.Row="6" Grid.Column="1" />
	</Grid>
</ContentPage>
